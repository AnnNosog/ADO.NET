<Window x:Class="Homework_01.ColorChoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework_01"
        mc:Ignorable="d"
        Title="ColorChoice" Height="200" Width="342.9">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="cmb_color" HorizontalAlignment="Center" Height="27" Margin="0,30,0,0" VerticalAlignment="Top" Width="150" SelectionChanged="cmb_color_SelectionChanged"/>
        <Button x:Name="button" Content="Ok" HorizontalAlignment="Center" Height="22" Margin="0,100,0,0" VerticalAlignment="Top" Width="150" Click="button_Click"/>
    </Grid>
</Window>
