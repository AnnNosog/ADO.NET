<Window x:Class="Homework_01.CaloricChoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework_01"
        mc:Ignorable="d"
        Title="CaloricChoice" Height="180" Width="190" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="tb_caloric" HorizontalAlignment="Left" Height="25" Margin="70,20,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="70" TextChanged="tb_caloric_TextChanged"/>
        <TextBox x:Name="tb_caloricFrom" IsEnabled="False" HorizontalAlignment="Left" Height="25" Margin="70,60,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="70" TextChanged="tb_caloricFrom_TextChanged" />
        <CheckBox x:Name="chk_from" Content="До" HorizontalAlignment="Left" Height="25" Margin="25,60,0,0" VerticalAlignment="Top" Width="40" Checked="chk_from_Checked"/>
        <Button x:Name="button" Content="Ok" HorizontalAlignment="Left" Height="21" Margin="51,104,0,0" VerticalAlignment="Top" Width="89" Click="button_Click"/>

    </Grid>
</Window>
