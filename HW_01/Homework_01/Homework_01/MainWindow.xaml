                  HorizontalAlignment="Left" Height="25"
                  IsEnabled="False"
                  Margin="275,45,0,0" VerticalAlignment="Top" Width="333"
                  SelectionChanged="cmb_request_SelectionChanged"/>

        <ListBox x:Name="lb_output" HorizontalAlignment="Left" Height="230" Margin="275,90,0,0" VerticalAlignment="Top" Width="333"/>


